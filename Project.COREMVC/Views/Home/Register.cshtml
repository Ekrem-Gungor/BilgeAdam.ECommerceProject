@model UserRegisterModel

<form asp-action="Register" asp-controller="Home" method="post" class="p-3 w-75 m-auto">

    <div class="mb-4">
        <label>Kullanıcı ismini giriniz</label>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="mb-4">
        <label>Sifre giriniz</label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="mb-4">
        <label>Email giriniz</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-4">
        <button class="btn btn-primary">Kayıt ol</button>
    </div>

</form>